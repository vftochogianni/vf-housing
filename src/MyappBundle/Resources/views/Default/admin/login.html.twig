{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="header col-sm-12">
            <h3  class="page-header text-primary" style="margin-bottom: 5%;">Log in!</h3>
        </div>

        {% if app.session.flashBag.has('message')  %}
            {% for flashMessage in app.session.flashbag.get('message') %}
                <div class="col-sm-12 text-center alert alert-success" role="alert">{{ flashMessage }}</div>
            {% endfor %}
        {% endif %}
        {% if app.session.flashBag.has('error')  %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="col-sm-12 text-center alert alert-danger" role="alert">{{ flashMessage }}</div>
            {% endfor %}
        {% endif %}

        <div class="col-sm-offset-1 col-sm-6 text-left">
            {% if error %}
                <div style="text-align: center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('myapp_login') }}" method="post" style="width: 100%">
                <div class="col-sm-10">
                    <label for="username" class="form-control-label">Email:</label>
                    <input type="email" class="form-control" id="username" name="_email" value="{{ last_username }}" />
                </div>

                <div class="col-sm-10">
                    <label for="password" class="form-control-label">Password:</label>
                    <input type="password" class="form-control" id="password" name="_password" />
                </div>

                <div class="col-sm-10">
                    <input type="hidden" name="myapp_homepage" value="/" />
                    <button type="submit" class="btn btn-primary"><b>Login</b></button>
                </div>
            </form>
        </div>
        <div class="col-sm-offset-1 col-sm-6 text-right">
            <a href="{{ path('myapp_forgot_password') }}"><i>Forgot your password?</i></a>
        </div>
    </div>
{% endblock %}