{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="header col-sm-12">
            <h3  class="page-header text-primary" style="margin-bottom: 5%; ">Sign up for free now!</h3>
        </div>

        <div class="col-sm-offset-1 col-sm-6 col-xs-12 text-left">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="col-sm-12">
                {{ form_row(form.name) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(form.email) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(form.password) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(form.tel) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(form.question) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(form.answer) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(form.register) }}
            </div>
            {{ form_end(form) }}

        </div>

    </div>

{% endblock %}