{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="header col-sm-12">

            <h3 class="page-header text-primary" style="margin-bottom: 5%"> Update: {{ title }}</h3>

            <div class="col-sm-offset-2 col-sm-8 col-xs-12 text-left">

                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="col-sm-12" style="padding:1%">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-sm-12" style="padding:1%">
                    {{ form_row(form.state) }}
                </div>
                <div class="col-sm-4" style="padding:1%">
                    {{ form_row(form.bedrooms) }}
                </div>
                <div class="col-sm-4" style="padding:1%">
                    {{ form_row(form.m2) }}
                </div>
                <div class="col-sm-4" style="padding:1%">
                    {{ form_row(form.floor) }}
                </div>
                <div class="col-sm-12" style="padding:1%">
                    {{ form_row(form.status) }}
                </div>
                <div class="col-sm-12" style="padding:1%">
                    {{ form_row(form.description) }}
                </div>
                <div class="col-sm-6" style="padding:1%">
                    {{ form_row(form.address) }}
                </div>
                <div class="col-sm-3" style="padding:1%">
                    {{ form_row(form.city) }}
                </div>
                <div class="col-sm-3" style="padding:1%">
                    {{ form_row(form.country) }}
                </div>
                <div class="col-sm-6" style="padding:1%">
                    {{ form_row(form.price) }}
                </div>
                <div class="col-sm-6" style="padding:1%">
                    {{ form_row(form.currency) }}
                </div>
                <div class="col-sm-12" style="padding:1%">
                    {{ form_row(form.submit) }}
                </div>

                {{ form_end(form) }}

            </div>
        </div>

    </div>

{% endblock %}

