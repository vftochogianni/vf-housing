{% block body %}
    <div class="container-fluid">
        <div class="header col-sm-12">
            <h3 class="page-header text-primary" style="margin-bottom: 5%"> Oooops! Did you make a mistake?</h3>
            {% if status_code == 404 %}
                <h1 class="text-center">404 Not Found</h1>
                <h4 class="text-center">Sorry, an error has occured. Requested page not found!</h4>
            {% elseif status_code == 403 %}
                <h1 class="text-center">403 Access Denied</h1>
                <h4 class="text-center">Sorry, an error has occured. Requested page is forbidden!</h4>
            {% elseif status_code == 500 %}
                <h1 class="text-center">500 Internal Error</h1>
                <h4 class="text-center">Sorry, an error has occured. Please try again</h4>
            {% else %}
                <h1 class="text-center">{{ status_code }} {{ status_text }} </h1>
                <h4 class="text-center">Sorry, an error has occured. Please try again!</h4>
            {% endif %}
            <p class="text-center"><a href="{{ path('myapp_homepage') }}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span> Take Me Home </a></p>
        </div>
    </div>
{% endblock %}